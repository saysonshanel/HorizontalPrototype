<UserControl x:Class="HorizontalPrototype.ViewMatchesControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HorizontalPrototype"
             mc:Ignorable="d" 
             d:DesignHeight="616" d:DesignWidth="211.5">
    <Grid>
        <Canvas x:Name="ViewMatches" Margin="0,0,-211.5,-616">
            <Image x:Name="ImageOfMatch" Height="423" Canvas.Top="367.5" Width="423"/>
            <TextBlock x:Name="NameOfMatch" Height="96" TextWrapping="Wrap" Text="[Name of match]" Canvas.Top="795.5" Width="423" FontSize="48"/>
        </Canvas>

    </Grid>
</UserControl>
