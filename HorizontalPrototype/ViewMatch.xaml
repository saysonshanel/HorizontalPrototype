<UserControl x:Class="HorizontalPrototype.ViewMatch"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HorizontalPrototype"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="150">
    <Grid>
        <Image HorizontalAlignment="Left" Width="150" Margin="0,0,0,50"/>
        <TextBlock x:Name="Name" Margin="5,0,0,5" TextWrapping="Wrap" Text="Name of Match" HorizontalAlignment="Left" Width="140" Height="40" VerticalAlignment="Bottom" FontFamily="Georgia" FontWeight="Bold" TextAlignment="Center"/>
        <Ellipse Stroke="Black" Margin="0,0,0,50">
            <Ellipse.Fill>
                <ImageBrush ImageSource="no-photo.png"/>
            </Ellipse.Fill>
        </Ellipse>
        <Button x:Name="ViewButton" Content="Button" HorizontalAlignment="Left" Height="200" VerticalAlignment="Top" Width="150" Opacity="0"/>

    </Grid>
</UserControl>
