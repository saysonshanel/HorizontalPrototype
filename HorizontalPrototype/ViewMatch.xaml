<UserControl x:Class="HorizontalPrototype.ViewMatch"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HorizontalPrototype"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="150">
    <Grid>
        <Image HorizontalAlignment="Left" Height="150" VerticalAlignment="Top" Width="150"/>
        <TextBlock HorizontalAlignment="Left" Height="35" Margin="10,155,0,0" TextWrapping="Wrap" Text="Name of Match" VerticalAlignment="Top" Width="130"/>
        <Ellipse HorizontalAlignment="Left" Height="150" Stroke="Black" VerticalAlignment="Top" Width="150">
            <Ellipse.Fill>
                <ImageBrush ImageSource="TestFace.png"/>
            </Ellipse.Fill>
        </Ellipse>
        <Button x:Name="ViewButton" Content="Button" HorizontalAlignment="Left" Height="200" VerticalAlignment="Top" Width="150" Opacity="0"/>

    </Grid>
</UserControl>
